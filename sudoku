    1, 2, 3, 6, 7, 8, 9, 4, 5,
    5, 8, 4, 2, 3, 9, 7, 6, 1,
    9, 6, 7, 1, 4, 5, 3, 2, 8,
    3, 7, 2, 4, 6, 1, 5, 8, 9,
    6, 9, 1, 5, 8, 3, 2, 7, 4,
    4, 5, 8, 7, 9, 2, 6, 1, 3,
    8, 3, 6, 9, 2, 4, 1, 5, 7,
    2, 1, 9, 8, 5, 7, 4, 3, 6,
    7, 4, 5, 3, 1, 6, 8, 9, 2];
var hardPuzzle=[
    5, 8, 1, 6, 7, 2, 4, 3, 9,
    7, 9, 2, 8, 4, 3, 6, 5, 1,
    3, 6, 4, 5, 9, 1, 7, 8, 2,
    4, 3, 8, 9, 5, 7, 2, 1, 6,
    2, 5, 6, 1, 8, 4, 9, 7, 3,
    1, 7, 9, 3, 2, 6, 8, 4, 5,
    8, 4, 5, 2, 1, 9, 3, 6, 7,
    9, 1, 3, 7, 6, 8, 5, 2, 4,
    6, 2, 7, 4, 3, 5, 1, 9, 8];
//constants seen below are index numbers for the tiles we want to display for the given puzzle
